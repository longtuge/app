                            android:layout_height="150dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="10dp"
                                android:text="问大家"
                                android:textColor="#111111"
                                android:textSize="11dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/textView5"
                                android:layout_below="@+id/textView5"
                                android:drawableLeft="@mipmap/goods_estimate_wen"
                                android:gravity="center"
                                android:text="多久提上车？"
                                android:textColor="#111111"
                                android:textSize="10dp"
                                android:id="@+id/goods_estimate_wenti_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1个回答"
                                android:textColor="#d9d9d9"
                                android:textSize="10dp"
                                android:id="@+id/goods_estimate_wenti_1_1"
                                android:layout_below="@+id/goods_estimate_wenti_1"
                                android:layout_alignStart="@+id/goods_estimate_wenti_2_1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/goods_estimate_wen"
                                android:layout_marginTop="5dp"
                                android:gravity="center"
                                android:text="这款车总价是多少"
                                android:textColor="#111111"
                                android:textSize="10dp"
                                android:layout_below="@+id/goods_estimate_wenti_1_1"
                                android:layout_alignStart="@+id/goods_estimate_wenti_1"
                                android:id="@+id/goods_estimate_wenti_2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1个回答"
                                android:textColor="#d9d9d9"
                                android:textSize="10dp"
                                android:layout_below="@+id/goods_estimate_wenti_2"
                                android:layout_alignStart="@+id/goods_estimate_wenti_2"
