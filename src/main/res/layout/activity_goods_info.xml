                                android:lines="1"
                                android:text="苍南吉易汽车销售服务有限公司"
                                android:textColor="#211111"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/tv_goods_estimate_mendian_juli"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/tv_goods_estimate_mendian_name"
                                android:layout_marginStart="20dp"
                                android:layout_toEndOf="@+id/tv_goods_estimate_mendian_name"
                                android:text="12.4km"
                                android:textColor="#787c80"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/tv_goods_estimate_mendian_dizhi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/tv_goods_estimate_mendian_name"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="苍南县灵溪镇苍南达到271号"
                                android:textColor="#787c80"
                                android:textSize="10dp" />

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@+id/tv_goods_estimate_mendian_dizhi"
