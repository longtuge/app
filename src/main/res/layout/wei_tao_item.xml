<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/wei_tao_item_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/wei_tao_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/wei_tao_item_logo"
            android:text="吉利汽车官方旗舰店" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/wei_tao_item_name"
            android:src="@mipmap/tianmaologo" />
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TableLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TableLayout>
    
</LinearLayout>